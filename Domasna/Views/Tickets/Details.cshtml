@model Domasna.Domain.DomainModels.Ticket

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <hr />
    <dl class="row d-flex justify-content-between">
        <div class="col-6">
            <div class="d-flex">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.TicketName)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.TicketName)
                </dd>
            </div>
            <dd class="col-sm-10">
                <img class="card-img-top img-fluid" src="@Model.TicketImage" alt="Image for ticket!" />
            </dd>
        </div>
            <div class="col-6 d-flex align-items-center">
                <div>
                        <dd class="d-block">
                            @Html.DisplayFor(model => model.TicketDescription)
                        </dd>
                        <div class="d-block mt-4">
                            <a asp-controller="Tickets" asp-action="AddTicketToCard" asp-route-id="@Model.Id" class="btn btn-info m-1">Add to Book with recepies</a>
                        </div>
                </div>
              </div>
<dt class="col-sm-2">
    @Html.DisplayNameFor(model => model.TicketPrice)
</dt>
<dd class="col-sm-10">
    <span>@Model.TicketPrice &euro;</span>
</dd>
<dt class="col-sm-2">
    @Html.DisplayNameFor(model => model.Rating)
</dt>
<dd class="col-sm-10">
    @Html.DisplayFor(model => model.Rating)
</dd>
    </dl>
</div>
<div>
    <a asp-action="Index" class="btn btn-dark m-1">Back</a>
</div>
